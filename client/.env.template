# Next.js configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_WHISPER_API_ENABLED=true
NEXT_PUBLIC_GEMINI_API_ENABLED=true

# API Keys (replace with your actual keys in .env.local)
NEXT_PUBLIC_WHISPER_API_KEY=your_whisper_api_key
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# Database Configuration
NEXT_PUBLIC_DATABASE_TYPE=airtable
# NEXT_PUBLIC_DATABASE_TYPE=notion

# Feature Flags
NEXT_PUBLIC_VOICE_FEEDBACK_ENABLED=true
NEXT_PUBLIC_DAILY_SUMMARY_ENABLED=true
